          "name": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "startTime": {
            "type": "string",
            "format": "date-time"
          },
          "endTime": {
            "type": "string",
            "format": "date-time"
          },
          "description": {
            "maxLength": 1000,
            "type": "string",
            "nullable": true
          },
          "venueId": {
            "type": "string",
            "format": "uuid"
          }
        },
